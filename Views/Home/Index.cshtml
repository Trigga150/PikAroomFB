@model IEnumerable<PikAroomFB.Models.Property>

@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="text-center">
        <h1> PikAroom</h1>
    </div>
    <div class="text-center">
        <h4>"A Home Away From Home"</h4>
    </div>
    <div class="align-items-lg-center">
        <div>
        </div>
    </div>
    <div class="row">
        <div class="mt-3 p-3 shadow rounded">
            <div class="carousel slide" id="caroselExampleSlidesOnly" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/Images/h1.jpg" class="w-100 d-block" style="height:350px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/h2.jpg" class="w-100 d-block" style="height:350px" />
                    </div>
                    <div class="carousel-item">
                        <img src="~/Images/hb.jpg" class="w-100 d-block" style="height:350px" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        @foreach (var item in Model.ToList())
        {
            <div class="col-4">
                <div class="mt-2 pt-4 shadow rounded">
                    <div class="card">
                        <img src="@item.ProfileImagePath" class="w-100 d-block h-100" />
                        <div class="card-body">
                            <h5 class="text-bg-info">@item.PropertyName </h5>
                            
                            <p class="card-text">Rating : @item.Rating</p>
                            <p class="card-text">Type : @item.Type</p>
                            <p class="card-text">Rent : @item.Price</p>
                            @Html.ActionLink("Details", "Details", new { id = item.PropertyName })
                        </div>
                    </div>

                </div>

            </div>
        }





    </div>
</div>
